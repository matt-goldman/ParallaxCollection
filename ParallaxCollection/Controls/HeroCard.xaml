<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParallaxCollection.Controls.HeroCard">
    <Border x:Name="Card"
            Margin="30"
            StrokeShape="RoundRectangle 30">
        <Grid ColumnDefinitions="2*,3*"
              RowDefinitions="4*,*"
              Padding="20">
            
            <Image Grid.ColumnSpan="2"
                   HeightRequest="400"
                   Aspect="AspectFit"
                   x:Name="HeroImageImage"/>
            
            <Image Grid.Column="0"
                   Grid.Row="1"
                   WidthRequest="75"
                   x:Name="HeroLogoImage"
                   VerticalOptions="Center"/>
            
            <VerticalStackLayout Grid.Column="1"
                                 Grid.Row="1"
                                 VerticalOptions="Center">
                <Label Margin="10,0,0,0"
                       FontSize="Title"
                       FontAttributes="Bold"
                       TextColor="White"
                       x:Name="HeroNameLabel"/>
            
                <Label Margin="10,0,0,0"
                       FontSize="Body"
                       TextColor="White"
                       x:Name="SecretIdentityLabel"/>
            </VerticalStackLayout>
            
            <Label Grid.Column="1"
                   Grid.Row="1"
                   HorizontalOptions="End"
                   HorizontalTextAlignment="End"
                   VerticalOptions="Center"
                   x:Name="YLabel"/>
            
        </Grid>
    </Border>
</ContentView>